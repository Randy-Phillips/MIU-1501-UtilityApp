
var loginWindow = Titanium.UI.createWindow ({
	title: "Main Application",
    backgroundColor:"#fff"
});

var inputHeight = 200;

var createInput = function(inputValue) {
	var	createView = Ti.UI.createView({
		backgroundColor: "303030",
		border: 1,
		top: inputHeight + 20,
		height:	50,
		left: 5,
		right: 0
	});
	
	var	createScrollView = Ti.UI.createScrollView({
		backgroundColor: "#fff",
		height:	"100%",
		width: "100%"
	});
	
	
	
	var inputField = Ti.UI.createTextField ({
		borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
		color: "#000",
		value: inputValue,
		height: "99%",
		//width: "97%",
		left: 12,
		right: 1
	});

	var origValue = inputValue;
	var clearValue = function(){
		if (inputField.value == origValue)
		inputField.setValue("");
	};
	
	
	var checkValue = function() {
		if (inputField.value.length < 2) {
			inputField.value = inputValue;
			return inputField.value;
	 	};
	};
	
	inputField.addEventListener("focus", clearValue);
	inputField.addEventListener("blur", checkValue);
	
	
	createView.add(inputField);
	createScrollView.add(createView);
	loginWindow.add(createScrollView);
	inputHeight = createView.top + 50;
	return inputHeight;
};

createInput("Enter Full Name");
createInput("Enter Email Address");
createInput("Enter Password");

loginWindow.open();



